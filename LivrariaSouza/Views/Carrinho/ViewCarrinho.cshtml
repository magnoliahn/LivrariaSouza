@model IEnumerable<LivrariaSouza.Models.Models.Carrinho>

@{
    ViewBag.Title = "Carrinho de Compras";
}

<h1>Carrinho de Compras</h1>

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-info">
        @TempData["Mensagem"]
    </div>
}

@if (!Model.Any())
{
    <p>Seu carrinho está vazio.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Imagem</th>
                <th>Título</th>
                <th>Autor</th>
                <th>Preço Unitário</th>
                <th>Quantidade</th>
                <th>Subtotal</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Livro.CapaLivro" alt="Imagem do livro" style="width: 100px; height: auto;" />
                    </td>
                    <td>@item.Livro.Titulo</td>
                    <td>@item.Livro.Autor</td>
                    <td>R$ @item.ValorUnit.ToString("F2")</td>
                    <td>
                        <form asp-action="AtualizaQuantidade" method="post" style="display: inline;">
                            <input type="hidden" name="userId" value="@item.IdUsuario" />
                            <input type="hidden" name="livroId" value="@item.LivroId" />
                            <input type="number" name="quantidade" value="@item.Quantidade" min="1" class="form-control" style="width: 80px; display: inline-block;" />
                            <button type="submit" class="btn btn-sm btn-primary">Atualizar</button>
                        </form>
                    </td>
                    <td>R$ @item.Subtotal.ToString("F2")</td>
                    <td>
                        <form asp-action="RemoveDoCarrinho" method="post" style="display: inline;">
                            <input type="hidden" name="userId" value="@item.IdUsuario" />
                            <input type="hidden" name="livroId" value="@item.LivroId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remover</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <h4>Total: R$ @Model.Sum(c => c.Subtotal).ToString("F2")</h4>
    </div>
    <div class="text-right">
        <a href="/Checkout" class="btn btn-success">Finalizar Compra</a>
    </div>
}
