@model LivrariaSouza.Models.Models.Livro

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Livro</title>
    <!-- Link para o Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Roboto', sans-serif; /* Usando a fonte Roboto */
            background: linear-gradient(to bottom right, #f0f8ff, #e6e6fa); /* Fundo com gradiente suave */
            margin: 0;
            padding: 20px;
        }

        .home-icon {
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 24px;
            color: #007bff;
            text-decoration: none;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            font-size: 2rem; /* Estilização igual à página anterior */
            font-weight: bold; /* Estilização igual à página anterior */
        }

        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s;
        }

            form:hover {
                transform: translateY(-2px); /* Efeito de levitação ao passar o mouse */
            }

        div {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #444;
        }

        input[type="text"],
        input[type="number"],
        input[type="date"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1rem;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1); /* Sombra para os campos de entrada */
            transition: border-color 0.3s, box-shadow 0.3s; /* Efeito de transição suave */
        }

            input[type="text"]:focus,
            input[type="number"]:focus,
            input[type="date"]:focus,
            textarea:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5); /* Efeito de foco nos campos */
            }

        textarea {
            height: 100px;
            resize: vertical;
        }

        button, .cancel-btn {
            width: 150px; /* Definindo largura fixa */
            padding: 8px 12px; /* Diminuindo o tamanho dos botões */
            border: none;
            border-radius: 5px;
            font-size: 1rem; /* Tamanho da fonte menor */
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s; /* Efeito de transição suave */
            margin: 0 5px; /* Espaçamento entre os botões */
            text-align: center; /* Centralizando o texto */
        }

        button {
            background-color: #007bff; /* Cor do botão Salvar */
            color: #fff;
        }

            button:hover {
                background-color: #0056b3;
                transform: scale(1.05); /* Efeito de aumento ao passar o mouse */
            }

        .cancel-btn {
            background-color: #dc3545; /* Cor de fundo vermelho */
            color: #fff; /* Cor do texto do botão cancelar */
            text-decoration: none; /* Remove sublinhado do link */
        }

            .cancel-btn:hover {
                background-color: #c82333; /* Cor de fundo vermelho escuro ao passar o mouse */
                transform: scale(1.05); /* Efeito de aumento ao passar o mouse */
                color: #fff; /* Manter a cor do texto como branco ao passar o mouse */
                text-decoration: none; /* Garante que o texto não fique sublinhado */
            }

        .button-container {
            display: flex; /* Flexbox para alinhar os botões lado a lado */
            justify-content: center; /* Centralizando os botões */
            align-items: center; /* Alinhando verticalmente */
            margin-top: 20px; /* Espaço acima dos botões */
        }

        /* Estilo para o ícone de casa */
        .home-icon {
            font-size: 1.5rem;
            color: #007bff;
            margin-right: 10px; /* Espaço entre o ícone e o texto */
        }

        .home-link {
            text-decoration: none;
            color: #007bff;
            font-size: 1.2rem;
        }

            .home-link:hover {
                color: #0056b3;
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <a href="@Url.Action("RetornaTodosLivros", "Home")" class="home-icon"><i class="fas fa-home"></i></a> 
    <h2>Editar Livro</h2>

    <form asp-action="EditarDetalhesLivro" asp-controller="DetalhesLivro" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Titulo">Título</label>
            <input type="text" asp-for="Titulo" required />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Autor">Autor</label>
            <input type="text" asp-for="Autor" required />
            <span asp-validation-for="Autor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="NumeroPag">Número de Páginas</label>
            <input type="number" asp-for="NumeroPag" required />
            <span asp-validation-for="NumeroPag" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ValorVenda">Valor de venda</label>
            <input type="number" asp-for="ValorVenda" step="0.01" required />
            <span asp-validation-for="ValorVenda" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ValorCompra">Valor de compra</label>
            <input type="number" asp-for="ValorCompra" step="0.01" required />
            <span asp-validation-for="ValorCompra" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="AnoLancamento">Ano de Lançamento</label>
            <input type="date" asp-for="AnoLancamento" required />
            <span asp-validation-for="AnoLancamento" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Descricao">Descrição</label>
            <input type="text" asp-for="Descricao" required />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="QntdEstoque">Quantidade em Estoque</label>
            <input type="number" asp-for="QntdEstoque" required />
            <span asp-validation-for="QntdEstoque" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Imagem">Imagem (URL)</label>
            <input type="text" asp-for="Imagem" required />
            <span asp-validation-for="Imagem" class="text-danger"></span>
        </div>

        <div class="button-container">
            <a href="@Url.Action("MostraDetalhesLivro", new { Id = Model.Id })" class="cancel-btn">Cancelar</a>
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        </div>
    </form>
</body>
</html>
