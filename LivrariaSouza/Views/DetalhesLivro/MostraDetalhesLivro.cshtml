@model LivrariaSouza.Models.Models.Livro

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes do Livro</title>
    <style>
        /* Estilos gerais */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .titulo-livros {
            text-align: center;
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #333;
        }

        .livro-detalhes {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .livro-imagem-detalhes {
            width: 100%;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .col-md-4, .col-md-8 {
            padding: 10px;
        }

        .col-md-4 {
            flex-basis: 35%;
        }

        .col-md-8 {
            flex-basis: 60%;
        }

        h3 {
            font-size: 2rem;
            margin-bottom: 15px;
            color: #444;
        }

        p {
            font-size: 1.2rem;
            line-height: 1.6;
            color: #666;
        }

        p strong {
            color: #333;
            font-weight: bold;
        }

        /* Estilo dos botões */
        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        /* Centralização dos botões */
        .button-container {
            text-align: center;
            margin-top: 20px;
        }

    </style>
</head>
<body>
    <h2 class="titulo-livros">Detalhes do Livro</h2>

    <div class="livro-detalhes">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Imagem" alt="@Model.Titulo" class="livro-imagem-detalhes" />
            </div>
            <div class="col-md-8">
                <h3>@Model.Titulo</h3>
                <p><strong>Autor:</strong> @Model.Autor</p>
                <p><strong>Número de Páginas:</strong> @Model.NumeroPag</p>
                <p><strong>Valor:</strong> @Model.Valor.ToString("C")</p>
                <p><strong>Data de Lançamento:</strong> @Model.AnoLancamento.ToShortDateString()</p>
                <p><strong>Descrição:</strong> @Model.Descricao</p>

                <p><strong>Disponibilidade:</strong> @(Model.Disponibilidade ? "Disponível" : "Esgotado")</p>
                @if (Model.Disponibilidade && Model.QntdEstoque > 0)
                {
                        <p><strong>Quantidade em Estoque:</strong> @Model.QntdEstoque</p>
                }
                else if (!Model.Disponibilidade)
                {
                        <p><strong>Quantidade em Estoque:</strong> Esgotado</p>
                }
            </div>
        </div>
        <!-- Botões de Ação -->
        <div class="button-container">
            <a href="@Url.Action("EditarLivro", "DetalhesLivro", new { id = Model.Id })" class="btn btn-primary">Editar</a>

            <form asp-action="DeletaLivro" asp-controller="DetalhesLivro" method="post" style="display:inline-block;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja deletar este livro?');">Deletar</button>
            </form>
        </div>
    </div>
</body>
</html>
