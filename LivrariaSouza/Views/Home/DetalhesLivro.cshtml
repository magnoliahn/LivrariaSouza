@model LivrariaSouza.Models.Models.Livro

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes do Livro</title>
    <style>
        /* Seus estilos existentes */
    </style>
</head>
<body>
    <h2 class="titulo-livros">Detalhes do Livro</h2>

    <div class="livro-detalhes">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Imagem" alt="@Model.Titulo" class="livro-imagem-detalhes" />
            </div>
            <div class="col-md-8">
                <h3>@Model.Titulo</h3>
                <p><strong>Autor:</strong> @Model.Autor</p>
                <p><strong>Número de Páginas:</strong> @Model.NumeroPag</p>
                <p><strong>Valor:</strong> @Model.Valor.ToString("C")</p>
                <p><strong>Ano de Lançamento:</strong> @Model.AnoLancamento.ToShortDateString()</p>
                <p><strong>Descrição:</strong> @Model.Descricao</p>

                <p>
                    <strong>Disponibilidade:</strong>
                    @if (Model.Disponibilidade)
                    {
                        <span>Disponível</span>
                        <span> | Estoque: @Model.QntdEstoque</span>
                    }
                    else
                    {
                        <span style="color: red;">Esgotado</span>
                    }
                </p>
            </div>
        </div>
    </div>
</body>
</html>
