@model LivrariaSouza.Models.Models.Livro

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Livro</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"> <!-- Link para a fonte Roboto -->
    <style>
        body {
            font-family: 'Roboto', sans-serif; /* Usando a fonte Roboto */
            background: linear-gradient(to bottom right, #f0f8ff, #e6e6fa); /* Fundo com gradiente suave */
            margin: 0;
            padding: 20px;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            font-size: 2rem; /* Estilização igual à página anterior */
            font-weight: bold; /* Estilização igual à página anterior */
        }

        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s;
        }

            form:hover {
                transform: translateY(-2px); /* Efeito de levitação ao passar o mouse */
            }

        div {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #444;
        }

        input[type="text"],
        input[type="number"],
        input[type="date"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1rem;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1); /* Sombra para os campos de entrada */
            transition: border-color 0.3s, box-shadow 0.3s; /* Efeito de transição suave */
        }

            input[type="text"]:focus,
            input[type="number"]:focus,
            input[type="date"]:focus,
            textarea:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5); /* Efeito de foco nos campos */
            }

        textarea {
            height: 100px;
            resize: vertical;
        }

        button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 1.2rem;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s; /* Efeito de transição suave */
        }

            button:hover {
                background-color: #0056b3;
                transform: scale(1.05); /* Efeito de aumento ao passar o mouse */
            }

        #statusDiv {
            font-weight: bold; /* Negrito para o status */
            font-size: 1.1rem; /* Aumentar um pouco o tamanho da fonte */
            color: #007bff; /* Cor do status */
        }
    </style>
</head>
<body>
    <h2>Adicionar Livro</h2>
    <form asp-action="CriarLivro" method="post">
        <div>
            <label>Título:</label>
            <input type="text" asp-for="Titulo" required />
        </div>
        <div>
            <label>Autor:</label>
            <input type="text" asp-for="Autor" required />
        </div>
        <div>
            <label>Número de Páginas:</label>
            <input type="number" asp-for="NumeroPag" required />
        </div>
        <div>
            <label>Valor (R$):</label>
            <input type="text" asp-for="Valor" required />
        </div>
        <div>
            <label>Data de Lançamento:</label>
            <input type="date" asp-for="AnoLancamento" required />
        </div>
        <div>
            <label>Descrição:</label>
            <textarea asp-for="Descricao" required></textarea>
        </div>
        <div>
            <label>Foto (URL):</label>
            <input type="text" asp-for="Imagem" required />
        </div>
        <div>
            <label>Quantidade em Estoque:</label>
            <input type="number" asp-for="QntdEstoque" oninput="verificarEstoque()" />
        </div>
        <div id="statusDiv">
            <p>Status: <span id="statusText">Disponível</span></p>
        </div>
        <button type="submit">Criar Livro</button>
    </form>

    <script>
        function verificarEstoque() {
            const estoque = document.querySelector('input[id="QntdEstoque"]').value;
            const statusText = document.getElementById('statusText');

            if (estoque === "" || estoque == 0) {
                statusText.innerText = "Esgotado";
            } else {
                statusText.innerText = "Disponível";
            }
        }

        // Inicializa a exibição correta ao carregar a página
        document.addEventListener('DOMContentLoaded', function () {
            verificarEstoque();
        });
    </script>
</body>
</html>
