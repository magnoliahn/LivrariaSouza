<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Livros</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom right, #f0f8ff, #e6e6fa);
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
        }

        .titulo-livros {
            text-align: center;
            font-size: 2rem;
            font-weight: bold;
            margin: 40px 0 30px;
            color: #333;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px; /* Diminua o gap para 10px */
            margin: 0 auto;
            padding: 0;
            max-width: 100%;
        }

        .col-md-2 {
            padding: 0;
            flex: 0 0 calc(19% - 8px); /* Ajuste para 19% para caber 5 livros */
            box-sizing: border-box;
        }

        .card {
            height: 500px; /* Ajuste para garantir espaço suficiente */
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s;
            display: flex;
            flex-direction: column;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card img {
                width: 100%;
                max-height: 300px;
                object-fit: contain;
                margin: auto;
            }

        .card-body {
            padding: 8px; /* Reduz o padding do card */
            text-align: center;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-title {
            font-size: 1rem;
            font-weight: bold;
            margin: 6px 0; /* Margem reduzida */
            color: #444;
        }

            .card-title a {
                color: inherit;
                text-decoration: none;
            }

        .card-value {
            font-size: 0.95rem;
            color: #28a745;
            font-weight: bold;
            margin: 4px 0; /* Margem reduzida */
        }

        .btn {
            display: inline-block;
            padding: 8px 12px; /* Diminuído para botões menores */
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
            margin: 5px 0; /* Ajuste para espaçamento entre os botões */
            transition: background-color 0.3s;
            font-size: 0.9rem; /* Tamanho da fonte reduzido */
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .btn-carrinho {
            background-color: #28a745;
        }

            .btn-carrinho:hover {
                background-color: #218838;
            }

        .btn-adicionar {
            background-color: #ffc107;
            color: #fff;
            width: 100%;
            padding: 8px; /* Reduz o padding do botão */
            font-size: 0.9rem;
            margin-top: 6px; /* Margem superior reduzida */
        }

            .btn-adicionar:hover {
                background-color: #e0a800; /* Tom mais escuro ao passar o mouse */
            }

        .msg-alert {
            text-align: center;
            font-size: 1.1rem;
            color: #d9534f; /* Cor do alerta */
            margin: 20px;
        }

        .msg-esgotado {
            color: #d9534f;
            font-size: 1rem;
            font-weight: bold;
            margin-top: 10px;
        }

        .card-estoque {
            font-size: 0.9rem;
            color: #555;
            margin: 4px 0; /* Margem reduzida */
        }
    </style>
</head>
<body>
    <h2 class="titulo-livros">Livraria Souza</h2>

    <a href="@Url.Action("ViewCarrinho", "Carrinho")" class="btn btn-carrinho">Ver Carrinho</a>

    <!-- Mensagem de alerta -->
    <div id="msgAlert" class="msg-alert" style="display:none;"></div>

    <div class="row">
        @foreach (var livro in Model)
        {
            <div class="col-md-2">
                <div class="card mb-4">
                    <a href="@Url.Action("MostraDetalhesLivroCliente", "HomeCliente", new { id = livro.Id })">
                        <img src="@livro.Imagem" class="card-img-top" alt="@livro.Titulo" />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="@Url.Action("MostraDetalhesLivroCliente", "HomeCliente", new { id = livro.Id })">@livro.Titulo</a>
                        </h5>
                        <p class="card-value">@livro.ValorVenda.ToString("C")</p>
                        
                        <p class="card-estoque">Em estoque: @livro.QntdEstoque</p>

                        @if (livro.QntdEstoque > 0)
                        {
                            <form class="adicionar-livro-form" method="post" action="@Url.Action("AdicionarLivroAoCarrinho", "Carrinho")">
                                <input type="hidden" name="livroId" value="@livro.Id" />
                                <input type="hidden" name="qntdLivros" value="1" /> <!-- quantidade padrão -->
                                <input type="hidden" name="valorLivro" value="@livro.ValorVenda" />
                                <button type="button" class="btn btn-adicionar adicionar-livro-btn">Adicionar ao Carrinho</button>
                            </form>
                        }
                        else
                        {
                            <p class="msg-esgotado">Livro esgotado</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <script>
        document.querySelectorAll('.adicionar-livro-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                const form = this.closest('.adicionar-livro-form');
                const formData = new FormData(form);

                fetch(form.action, {
                    method: 'POST',
                    body: formData
                })
                    .then(response => {
                        if (response.ok) {
                            return response.text();
                        }
                        throw new Error('Erro ao adicionar o livro ao carrinho.');
                    })
                    .then(message => {
                        // Exibe a mensagem de sucesso
                        const msgAlert = document.getElementById('msgAlert');
                        msgAlert.innerText = "Livro adicionado ao carrinho com sucesso!";
                        msgAlert.style.display = "block";
                        setTimeout(() => {
                            msgAlert.style.display = "none"; // Oculta a mensagem após 3 segundos
                        }, 3000);
                    })
                    .catch(error => {
                        const msgAlert = document.getElementById('msgAlert');
                        msgAlert.innerText = error.message;
                        msgAlert.style.display = "block";
                    });
            });
        });
    </script>
</body>
</html>