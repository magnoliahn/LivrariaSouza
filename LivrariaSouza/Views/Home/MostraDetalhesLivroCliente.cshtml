@model LivrariaSouza.Models.Models.Livro

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes do Livro</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to bottom right, #f0f8ff, #e6e6fa);
            margin: 0;
            padding: 20px;
        }

        .home-icon {
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 24px;
            color: #007bff;
            text-decoration: none;
        }

        .titulo-livros {
            text-align: center;
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #333;
        }

        .button-container {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            gap: 10px;
        }


        .livro-detalhes {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .livro-imagem-detalhes {
            width: 100%;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .col-md-4, .col-md-8 {
            padding: 10px;
        }

        .col-md-4 {
            flex-basis: 35%;
        }

        .col-md-8 {
            flex-basis: 60%;
        }

        h3 {
            font-size: 2rem;
            margin-bottom: 15px;
            color: #444;
        }

        p {
            font-size: 1rem;
            line-height: 1.6;
            color: #666;
        }

            p strong {
                color: #333;
                font-weight: bold;
            }

        .btn {
            display: inline-block;
            text-align: center;
            font-size: 0.9rem;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            margin-top: 10px;
        }

        .btn-carrinho {
            background-color: #007bff;
            color: #fff;
        }

        .btn-adicionar {
            background-color: #007bff; /* Cor do botão de adicionar */
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .msg-alert {
            text-align: center;
            font-size: 1.1rem;
            color: #d9534f;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="button-container">
        <a href="@Url.Action("ViewCarrinho", "Carrinho")" class="btn btn-carrinho">Ver Carrinho</a>
    </div>

    <a href="@Url.Action("HomePageCliente", "HomeCliente")" class="home-icon"><i class="fas fa-home"></i></a>
    <h2 class="titulo-livros">Detalhes do Livro</h2>

    <div class="livro-detalhes">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Imagem" alt="@Model.Titulo" class="livro-imagem-detalhes" />
            </div>
            <div class="col-md-8">
                <h3>@Model.Titulo</h3>
                <p><strong>Autor:</strong> @Model.Autor</p>
                <p><strong>Número de Páginas:</strong> @Model.NumeroPag</p>
                <p><strong>Preço:</strong> @Model.ValorVenda.ToString("C")</p>
                <p><strong>Data de Lançamento:</strong> @Model.AnoLancamento.ToShortDateString()</p>
                <p><strong>Descrição:</strong> @Model.Descricao</p>

                <p><strong>Status:</strong> @(Model.QntdEstoque > 0 ? "Disponível" : "Esgotado")</p>
                <p><strong>Quantidade em Estoque:</strong> @(Model.QntdEstoque > 0 ? Model.QntdEstoque.ToString() : "Esgotado")</p>

                @if (Model.QntdEstoque > 0)
                {
                    <!-- Formulário para adicionar ao carrinho apenas se houver estoque -->
                    <form id="adicionarCarrinhoForm" method="post">
                        <input type="hidden" name="livroId" value="@Model.Id" />
                        <input type="hidden" name="qntdLivros" value="1" />
                        <input type="hidden" name="valorLivro" value="@Model.ValorVenda" />
                        <button type="button" class="btn-adicionar" id="btnAdicionarCarrinho">Adicionar ao Carrinho</button>
                    </form>
                }
                else
                {
                    <div class="msg-alert">Livro esgotado</div>
                }
            </div>
        </div>
    </div>
</body>
</html>
