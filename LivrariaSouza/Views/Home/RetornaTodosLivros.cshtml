﻿
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Livros</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom right, #f0f8ff, #e6e6fa);
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
        }

        .titulo-livros {
            text-align: center;
            font-size: 2.5rem;
            font-weight: bold;
            margin: 50px 0 30px;
            color: #333;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
            margin: 0 auto;
            max-width: 1200px;
        }

        .card {
            flex: 0 0 calc(20% - 20px);
            height: 380px; /* Ajusta a altura do card */
            border: none;
            border-radius: 12px;
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            background-color: white;
            margin-bottom: 30px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
            }

            .card img {
                width: 100%;
                height: 200px; /* Altura da imagem ajustada para evitar esticamento */
                object-fit: contain; /* Preserva a proporção da imagem sem cortá-la */
                background-color: #f0f0f0;
            }

        .card-body {
            padding: 15px;
            text-align: center;
            flex-grow: 1;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin: 10px 0;
            color: #444;
            transition: color 0.3s;
        }

            .card-title a {
                color: inherit;
                text-decoration: none;
            }

                .card-title a:hover {
                    color: #007bff;
                }

        .card-value {
            font-size: 1rem;
            color: #28a745;
            font-weight: bold;
            margin-top: 5px;
        }

        .btn-primary {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
            box-shadow: 0px 4px 8px rgba(0, 123, 255, 0.4);
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                box-shadow: 0px 6px 12px rgba(0, 123, 255, 0.6);
            }
    </style>
</head>
<body>
    <h2 class="titulo-livros">Livraria Souza</h2>

    <a href="@Url.Action("CriarLivro", "Home")" class="btn btn-primary">Adicionar Livro</a>

    <div class="row">
        @foreach (var livro in Model)
        {
            <div class="col-md-2">
                <div class="card mb-4">
                    <a href="@Url.Action("MostraDetalhesLivro", "DetalhesLivro", new { id = livro.Id })">
                        <img src="@livro.Imagem" class="card-img-top" alt="@livro.Titulo" />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="@Url.Action("MostraDetalhesLivro", "DetalhesLivro", new { id = livro.Id })">@livro.Titulo</a>
                        </h5>
                        <p class="card-value">@livro.Valor.ToString("C")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>