<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Livros</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"> <!-- Link para a fonte Roboto -->
    <style>
        body {
            background: linear-gradient(to bottom right, #f0f8ff, #e6e6fa); /* Fundo com gradiente suave */
            font-family: 'Roboto', sans-serif; /* Aplicando a fonte Roboto */
            margin: 0;
            padding: 0;
        }

        .titulo-livros {
            text-align: center;
            font-size: 2rem;
            font-weight: bold;
            margin: 40px 0 30px; /* Aumentei a margem inferior para separar mais dos cards */
            color: #333; /* Cor escura do título */
            text-align: center;
            font-size: 2.6rem; /* Aumentei o tamanho da fonte */
            font-weight: bold;
            color: #333; /* Cor escura do título */
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between; /* Distribui os cards uniformemente */
            gap: 10px; /* Espaçamento entre os cards */
            margin: 0 auto; /* Centraliza os cards */
            max-width: 100%; /* Limita a largura máxima para caber 5 cards */
        }

        .card {
            flex: 0 0 calc(20% - 10px); /* Cada card terá 20% de largura menos o espaço entre eles */
            height: 405px; /* Mantém a altura dos cards */
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s;
            margin-bottom: 20px; /* Espaçamento inferior entre as linhas de cards */
        }



            .card:hover {
                transform: scale(1.05);
            }

            .card img {
                width: 100%;
                height: 300px; /* Aumentei a altura para a imagem */
                object-fit: cover; /* Mantém a proporção da imagem */
            }

        .card-body {
            padding: 10px; /* Reduzi o padding para mais espaço */
            text-align: center;
        }

        .card-title {
            font-size: 1.3rem; /* Aumentei a fonte do título */
            font-weight: bold;
            margin: 10px 0; /* Reduzi a margem superior para distanciar menos do card */
            color: #444; /* Cor normal do título do livro */
        }

            .card-title a {
                color: inherit; /* Mantém a cor do texto normal, herdando da cor definida acima */
                text-decoration: none; /* Remove o sublinhado do link */
            }

        .card-value {
            font-size: 1rem;
            color: #28a745;
            font-weight: bold;
        }

        .btn-primary {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <h2 class="titulo-livros">Livraria Souza</h2>

    <a href="@Url.Action("CriarLivro", "Home")" class="btn btn-primary">Adicionar Livro</a>

    <div class="row">
        @foreach (var livro in Model)
        {
            <div class="col-md-2">
                <div class="card mb-4">
                    <a href="@Url.Action("MostraDetalhesLivro", "DetalhesLivro", new { id = livro.Id })">
                        <img src="@livro.Imagem" class="card-img-top" alt="@livro.Titulo" />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="@Url.Action("MostraDetalhesLivro", "DetalhesLivro", new { id = livro.Id })">@livro.Titulo</a>
                        </h5>
                        <p class="card-value">@livro.Valor.ToString("C")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
