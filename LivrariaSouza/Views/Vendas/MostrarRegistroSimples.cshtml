@using LivrariaSouza.Models.Models.ViewModels
@model IEnumerable<RegistroDeVendaVM>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Histórico de Compras</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to bottom right, #f0f8ff, #e6e6fa);
            margin: 0;
            padding: 20px;
            color: #333;
            line-height: 1.6;
        }

        h2 {
            text-align: center;
            color: #444;
            margin-bottom: 30px;
            font-size: 2rem;
            font-weight: bold;
        }

        .table-container {
            margin: 20px auto;
            max-width: 800px;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f9f9f9;
        }

        td {
            color: #555;
            font-size: 1rem;
        }

        a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
            transition: color 0.3s;
        }

            a:hover {
                color: #0056b3;
            }
    </style>
</head>
<body>
    <h2>Histórico de Compras</h2>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>ID da Compra</th>
                    <th>Usuário</th>
                    <th>Data</th>
                    <th>Total</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var compra in Model)
                {
                    <tr>
                        <td>@compra.IdCompra</td>
                        <td>@compra.NomeUsuario</td>
                        <td>@compra.Data.ToString("dd/MM/yyyy")</td>
                        <td>R$ @compra.Total.ToString("F2")</td>
                        <td>
                            <a href="@Url.Action("MostrarRegistroCompleto", "Vendas", new { idRegistroDeVenda = compra.IdCompra })">Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
